<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">

        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/sopt_white" />
                    <gradient
                        android:angle="270"
                        android:centerColor="#F658A6"
                        android:endColor="#F658A6"
                        android:startColor="#F658A6" />
                    <size
                        android:width="30dp"
                        android:height="30dp" />
                </shape>
            </item>

            <item
                android:width="8dp"
                android:height="2dp"
                android:left="6.3dp"
                android:top="20dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#ffffff" />
                    </shape>
                </rotate>
            </item>

            <item
                android:width="19dp"
                android:height="2dp"
                android:left="9dp"
                android:top="16dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#ffffff" />
                    </shape>
                </rotate>
            </item>
        </layer-list>

    </item>
</layer-list>
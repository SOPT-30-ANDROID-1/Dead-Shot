<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">

        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke android:width="1dp" android:color="@color/sopt_white" />
                    <gradient android:angle="270" android:centerColor="#F658A6" android:endColor="#F658A6" android:startColor="#F658A6" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>

            <item android:width="5dp" android:height="1dp" android:left="4.8dp" android:top="11.3dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#ffffff" />
                    </shape>
                </rotate>
            </item>

            <item android:width="10dp" android:height="1dp" android:left="7.4dp" android:top="10dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#ffffff" />
                    </shape>
                </rotate>
            </item>
        </layer-list>

    </item>

    <item android:state_focused="false">

        <shape android:shape="oval">
            <corners android:radius="1dp" />
            <stroke android:width="1dp" android:color="@color/sopt_white" />
            <gradient android:angle="270" android:centerColor="#F658A6" android:endColor="#F658A6" android:startColor="#F658A6" />
            <size android:width="20dp" android:height="20dp" />
        </shape>

    </item>

</selector>
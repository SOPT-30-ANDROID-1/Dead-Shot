<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">

        <shape android:shape="oval">

            <corners android:radius="1dp" />
            <stroke
                android:width="1dp"
                android:color="@color/sopt_white" />
            <gradient
                android:angle="270"
                android:centerColor="#F658A6"
                android:endColor="#F658A6"
                android:startColor="#F658A6" />
            <size
                android:width="30dp"
                android:height="30dp" />

        </shape>

    </item>

</layer-list>